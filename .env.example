# --- API & Auth ---
BINANCE_API_KEY=YOUR_KEY_HERE
BINANCE_API_SECRET=YOUR_SECRET_HERE
TELEGRAM_BOT_TOKEN=YOUR_TOKEN_HERE

# --- Execution Modes ---
# SIM: borsaya emir atmaz, simülasyon.
# LIVE: gerçek emir akışı (API anahtarları zorunlu).
EXECUTION_MODE=SIM   # SIM | LIVE
TESTNET_MODE=false
NOTIFIER_ENABLED=false

# --- Order Pipeline (optional) ---
ORDER_PIPELINE_ENABLED=false
ORDER_PIPELINE_LOG=true
ALLOW_MIN_NOTIONAL_AUTOSCALE=false

# --- Exchange info fallback (opsiyonel) ---
USE_EXCHANGE_INFO=false
DEFAULT_TICK_SIZE=0.0001
DEFAULT_STEP_SIZE=0.0001
DEFAULT_MIN_NOTIONAL_USDT=5

# --- Trade guard (cooldown / overtrade) ---
MIN_TRADE_SPACING_SEC=45
MAX_TRADES_PER_DAY=12

# --- Order preferences ---
ORDER_TYPE=LIMIT     # LIMIT | MARKET
TIME_IN_FORCE=GTC    # GTC | IOC
POST_ONLY=false

# --- Slippage guard (opsiyonel) ---
# Örn: 0.003 => %0.3 slippage limiti
MAX_SLIPPAGE_PCT=0.0

# --- Metrics ---
# Prometheus metrikleri (opsiyonel HTTP endpoint)
METRICS_ENABLED=false
METRICS_PORT=9108
